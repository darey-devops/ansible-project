pipeline {
    agent any

 environment {
      JENKINS_ANSIBLE_CFG_FILE="${WORKSPACE}/playbooks/ansible.cfg"
    }

  stages {
    stage('Checkout SCM') {
      steps {
            git branch: 'main', url: 'https://github.com/darey-devops/ansible-project.git'
      }
    }



    stage('Prepare Ansible For Execution') {
      steps {
          withEnv(['ANSIBLE_CONFIG=/var/lib/jenkins/workspace/ansible-project_main/playbooks/ansible.cfg']) {
           sh 'export ANSIBLE_CONFIG=${ANSIBLE_CONFIG}'
          sh 'sed -i \'s/roles_path = \\/var\\/lib\\/jenkins\\/workspace/roles = \\/var\\/lib\\/jenkins\\/workspace\\/ansible-project_main\\/roles /g\' deploy/ansible.cfg'
        }
      }
    }
               
    stage('Run Ansible') {
      steps {

              ansiblePlaybook become: true, colorized: true, credentialsId: 'ansible', disableHostKeyChecking: true, installation: 'Ansible', inventory: 'inventory/dev', playbook: 'playbooks/site.yml'
      }
    }
    

    stage('Deploy') {
      steps {
        script {
          sh 'echo "Deploy Stage"'
        }
      }
    }
    

    stage('Clean Up') {
      steps {
        script {
          sh 'echo "Clean Up Stage"'
        }
      }
    

    }
  }
}